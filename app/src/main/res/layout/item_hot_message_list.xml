<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp">

    <com.huanchengfly.tieba.post.widgets.theme.TintTextView
        android:id="@+id/hot_order"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.Bold"
        android:textSize="@dimen/text_size_hot_title"
        app:tint="@color/default_color_accent"
        tools:text="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/hot_order"
        android:orientation="vertical">

        <com.huanchengfly.tieba.post.widgets.theme.TintTextView
            android:id="@+id/hot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Bold"
            android:textSize="@dimen/text_size_hot_title"
            app:tint="@color/default_color_text"
            tools:text="震惊" />

        <com.huanchengfly.tieba.post.widgets.theme.TintTextView
            android:id="@+id/hot_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/text_size_hot_desc"
            app:tint="@color/default_color_text_secondary"
            tools:text="某UP主咕咕咕" />
    </LinearLayout>
</RelativeLayout>